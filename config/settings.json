{
  "language": "he",
  "hardware_limits": {
    "max_x_position": 120.0,
    "max_y_position": 80.0,
    "min_x_position": 0.0,
    "min_y_position": 0.0,
    "paper_start_x": 15.0,
    "safe_movement_speed": 10.0,
    "max_acceleration": 5.0
  },
  "gui_settings": {
    "update_interval_ms": 500,
    "auto_load_csv": "sample_programs.csv",
    "canvas_margin_left": 60,
    "canvas_margin_right": 30,
    "canvas_margin_top": 40,
    "canvas_margin_bottom": 50,
    "canvas_min_scale": 3.5
  },
  "logging": {
    "level": "INFO",
    "show_timestamps": true,
    "show_thread_names": false,
    "console_output": true,
    "file_output": false,
    "file_path": "logs/scratch_desk.log",
    "use_colors": true,
    "use_icons": true,
    "categories": {
      "hardware": "INFO",
      "execution": "INFO",
      "gui": "WARNING",
      "grbl": "INFO"
    }
  },
  "simulation": {
    "show_grid": true,
    "grid_spacing": 20,
    "max_display_x": 120,
    "max_display_y": 80
  },
  "validation": {
    "tolerance": 0.01,
    "strict_mode": false
  },
  "operation_colors": {
    "mark": {
      "pending": "#880808",
      "in_progress": "#FF8800",
      "completed": "#00AA00"
    },
    "cuts": {
      "pending": "#8800FF",
      "in_progress": "#FF0088",
      "completed": "#AA00AA"
    }
  },
  "timing": {
    "motor_movement_delay_per_cm": 0.002,
    "max_motor_movement_delay": 0.1,
    "tool_action_delay": 0.02,
    "sensor_poll_timeout": 0.01,
    "row_marker_stable_delay": 0.05,
    "safety_check_interval": 0.02,
    "execution_loop_delay": 0.01,
    "transition_monitor_interval": 0.1,
    "thread_join_timeout_execution": 2.0,
    "thread_join_timeout_safety": 1.0,
    "piston_gpio_settling_delay": 0.05
  },
  "sensor_timeouts": {
    "sensor_override_timeout_rows": 3000,
    "sensor_override_timeout_lines": 1000,
    "sensor_highlight_duration": 500
  },
  "visualization": {
    "line_width_marks": 3,
    "line_width_cuts": 4,
    "dash_pattern_pending": [
      5,
      5
    ],
    "dash_pattern_in_progress": [
      8,
      4
    ],
    "dash_pattern_completed": [
      10,
      2
    ],
    "sensor_indicator_size": 3,
    "sensor_highlight_color": "#FF0000",
    "sensor_highlight_outline": "#8B0000",
    "sensor_highlight_width": 3,
    "motor_line_color_x": "red",
    "motor_line_color_y": "blue",
    "motor_intersection_size": 4
  },
  "ui_fonts": {
    "title": [
      "Arial",
      12,
      "bold"
    ],
    "heading": [
      "Arial",
      10,
      "bold"
    ],
    "normal": [
      "Arial",
      9
    ],
    "label": [
      "Arial",
      8,
      "bold"
    ],
    "dialog_title": [
      "Arial",
      14,
      "bold"
    ],
    "dialog_message": [
      "Arial",
      11
    ],
    "dialog_label": [
      "Arial",
      10
    ]
  },
  "ui_spacing": {
    "frame_padding": 5,
    "widget_padding": 3,
    "dialog_padding": 20,
    "button_padding_x": 10,
    "button_padding_y": 5
  },
  "hardware_monitor": {
    "background_color": "#2C3E50",
    "section_bg_color": "#34495E",
    "text_color": "#ECF0F1",
    "label_color": "#BDC3C7",
    "separator_color": "#7F8C8D",
    "panel_height": 120,
    "update_interval_ms": 200,
    "status_colors": {
      "motor_x": "#E74C3C",
      "motor_y": "#3498DB",
      "line_tools": "#3498DB",
      "row_tools": "#E74C3C",
      "sensors_x": "#F39C12",
      "sensors_y": "#27AE60",
      "system": "#8E44AD",
      "active": "#27AE60",
      "inactive": "#95A5A6",
      "critical": "#E74C3C",
      "sensor_triggered_x": "#FF3300",
      "sensor_triggered_y": "#00FF00"
    }
  },
  "hardware_config": {
    "use_real_hardware": true,
    "start_with_grbl": false,
    "poc_mode": true,
    "skip_initial_sensor_tests": false,
    "raspberry_pi": {
      "gpio_mode": "BCM",
      "pistons": {
        "line_marker_piston": 11,
        "line_cutter_piston": 10,
        "line_motor_piston": 2,
        "row_marker_piston": 15,
        "row_cutter_piston": 14
      },
      "rs485": {
        "enabled": true,
        "serial_port": "/dev/ttyUSB0",
        "baudrate": 9600,
        "bytesize": 8,
        "parity": "N",
        "stopbits": 1,
        "timeout": 1.0,
        "protocol": "modbus_rtu",
        "modbus_device_id": 1,
        "input_count": 32,
        "bulk_read_enabled": true,
        "sensor_addresses": {
          "line_marker_up_sensor": 14,
          "line_marker_down_sensor": 15,
          "line_cutter_up_sensor": 2,
          "line_cutter_down_sensor": 3,
          "row_cutter_up_sensor": 4,
          "row_cutter_down_sensor": 5,
          "row_marker_up_sensor": 6,
          "row_marker_down_sensor": 7,
          "line_motor_left_up_sensor": 8,
          "line_motor_left_down_sensor": 9,
          "line_motor_right_up_sensor": 10,
          "line_motor_right_down_sensor": 11
        },
        "register_address": 0
      },
      "direct_sensors": {
        "x_left_edge": 23,
        "x_right_edge": 24,
        "y_top_edge": 18,
        "y_bottom_edge": 22
      }
    },
    "arduino_grbl": {
      "serial_port": "/dev/ttyUSB0",
      "baud_rate": 115200,
      "connection_timeout": 5.0,
      "command_timeout": 10.0,
      "grbl_settings": {
        "units": "mm",
        "feed_rate": 1000,
        "rapid_rate": 3000,
        "acceleration": 50
      },
      "limit_switches": {
        "door": {
          "pin": "D2",
          "type": "normally_open",
          "pull_up": true
        }
      }
    }
  }
}